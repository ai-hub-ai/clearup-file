{
  "name": "clearup-file",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && electron-builder -mwl"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "electron": "^31.6.0",
    "electron-builder": "^24.9.3",
    "vite": "^4.5.3",
    "@vitejs/plugin-react": "^3.1.0"
  },
  "build": {
    "appId": "com.example.clearupfile",
    "productName": "ClearUp File",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "app/dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    }
  }
}
